<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, :label => '标题' do %>
      <%= f.text_field :title, :class => :span6 %>
    <% end %>
    <%= f.input :content,:label => "内容",:input_html => {:rows => 10, :style => 'width: 98%;'} %>
    <%= f.input :image %>
    <label class="string optional control-label">文章分类</label>
    <%= collection_select :post,:category_id,Category.all,:id,:title,:prompt => true %>
  </div>

  <div class="">
    <%= f.button :submit,class: "btn btn-success" %>
    <%= link_to "取消", posts_path %>
  </div>
<% end %>
