<% 
    # seo title
    content_for(:title) do
      @post.title
    end

%>
<p id="notice"><%= notice %></p>

<div class="span9">

<h2>
  <%= @post.title %>
</h2>
<p>
  <b>所属分类:</b>
  <%= link_to @post.category.title, @post.category %>
  <b>作者:</b>
  <%= link_to @post.user.name, @post.user %>
</p>

<p>
  <%= image_tag @post.image unless @post.image.blank? %>
</p>

<p>
  <%= @post.content %>
</p>

</div>

<div class='span3'>
  <% if current_user && current_user.has_role?(:admin) %>
  <div class="box">
    <div class="header">
      文章编辑
    </div>
    <div class="inner">
    <%= link_to '编辑本文', edit_post_path(@post), class:"btn btn-primary" %> |
    <%= link_to '删除', @post, method: :delete, class:"btn btn-danger", data: { confirm: '确定删除？删除后将无法恢复' } %>
  </div>
  </div>
<% end %>

  <%= render "shared/sidebar" %>
</div>
